<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar icon color. See: https://stackoverflow.com/a/28631979 -->
    <style name="ToolbarColoredIcons" parent="AppTheme">
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="fullscreen_dialog" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="reminder_name">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="reminder_details_notes">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="reminder_small_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="reminder_clickable_link">
    <item name="android:drawableStart">@drawable/ic_baseline_link_24</item>
    <item name="android:drawableTint">#999999</item>
    <item name="android:drawablePadding">8dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">0dp</item>
    <item name="android:autoLink">web</item>
    <item name="android:text">https://old.black/</item>
    <item name="android:fontFamily">@font/montserrat</item>
    <item name="android:textColor">#999999</item>
    <item name="android:textColorLink">#999999</item>
</style>

    <style name="separator_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#f0f0f0</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="reminder_card_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:drawableBottom">@drawable/ic_baseline_alarm_on_24</item>
        <item name="android:drawableTint">@color/colorLightGray</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="reminder_card_inactive_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:drawableBottom">@drawable/ic_baseline_alarm_on_24</item>
        <item name="android:drawableTint">#dddddd</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>
