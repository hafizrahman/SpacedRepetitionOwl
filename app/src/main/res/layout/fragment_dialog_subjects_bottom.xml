<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        android:text="Manage Subject"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subjects_bottom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Subject content here."
        android:layout_marginHorizontal="24dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="#eee" />


    <TextView
        android:id="@+id/subjects_bottom_dialog_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:gravity="start|center_vertical"
        android:text="View and edit"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_baseline_subject_24"
        android:drawablePadding="8dp"/>


    <TextView
        android:id="@+id/subjects_bottom_dialog_delete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:gravity="start|center_vertical"
        android:text="Delete"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_baseline_delete_24"
        android:drawablePadding="8dp"/>

</LinearLayout>