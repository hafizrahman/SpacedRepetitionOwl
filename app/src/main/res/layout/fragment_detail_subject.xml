<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sro_detail_subject_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        app:title="Subject Details"
        app:titleTextColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/sro_detail_subject_main"
        app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject Title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject URL" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reminders" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sro_detail_subject_reminders">
            <TextView
                android:id="@+id/sro_detail_subject_reminders_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Date 1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/sro_detail_subject_reminders_1"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_1"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Date 2"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_1"
                app:layout_constraintLeft_toRightOf="@id/sro_detail_subject_reminders_2"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_2"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Date 3"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_2"
                app:layout_constraintLeft_toRightOf="@id/sro_detail_subject_reminders_3"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_3"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/sro_detail_subject_reminders_date_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Date 4"
                app:layout_constraintTop_toBottomOf="@id/sro_detail_subject_reminders_3"
                app:layout_constraintLeft_toRightOf="@id/sro_detail_subject_reminders_4"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <Button
        android:id="@+id/detail_subject_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sro_detail_subject_main" />

    <Button
        android:id="@+id/detail_subject_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#F31212"
        android:text="Delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sro_detail_subject_main" />
</androidx.constraintlayout.widget.ConstraintLayout>